{

  "layer": "top",
  "position": "top",
  "all-outputs": false,
  "output": "eDP-1", 
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["clock", "battery", "bluetooth", "wireplumber", "network"],
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip": true,
    "tooltip-format": "{:%d %b, %a}"
  },
  "battery": {
      "format": "{capacity}% ",
      "full-at": 90,
      "format-full": "",
      "format-charging": "{capacity}%âš¡",
      "format-plugged": "",
